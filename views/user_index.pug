html(lang="en")
    head
        meta(charset="utf-8")
        meta(
            content="width=device-width, initial-scale=1" 
            name="viewport"
            )
        title DonateRED
        link(
            rel="stylesheet" 
            href="/bootstrap/css/bootstrap.min.css"
            )
        link(
            rel="stylesheet" 
            href="/fonts/fonts.css"
            )
        link(
            rel="stylesheet" 
            href="/fonts/materialdesignicons.min.css"
            )
        link(
